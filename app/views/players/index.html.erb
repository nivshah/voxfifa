<h2>Players</h2>
<table width="50%">
  <tr>
    <th>Name</th>
  </tr>
  <% if @players.count > 0 %>
    <% @players.each do |player| %>
    <tr>
      <td><%= player.name %></td>
    </tr>
    <% end %>
  <% else %>
    <tr>
      <td align="center">NO PLAYERS IN THE SYSTEM</td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add Player', new_player_path %>