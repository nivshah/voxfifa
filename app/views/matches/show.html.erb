<h2>Match</h2>
<table class="table">
  <thead>
    <tr>
      <th>Home</th>
      <th>Score</th>
      <th>Away</th>
      <th>Game Status</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @match.home_player.name %> (<%= @match.home_team %>)</td>
      <td><%= @match.home_score %> - <%= @match.away_score %></td>
      <td><%= @match.away_player.name %> (<%= @match.away_team %>)</td>
      <td><%= @match.game_status %></td>
    </tr>
  </tbody>
</table>
<%= link_to 'Edit', edit_match_path(@match) %> | 
<%= link_to 'Delete', @match, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Add', new_match_path %> |
<%= link_to 'List', matches_path %>